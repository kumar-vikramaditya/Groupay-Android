<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel_popup_eventsettle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d3d3d3"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:padding="10dip" >

        <TextView
            android:id="@+id/tv_event_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:text="Event Name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#372c24" />

        <TextView
            android:id="@+id/tv_event_desc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:text="Description"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#372c24" />

        <TextView
            android:id="@+id/tv_grp_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:text="Groupname"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#372c24" />

        <TextView
            android:id="@+id/tv_event_venue"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:text="Venue"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#372c24" />

        <TextView
            android:id="@+id/tv_event_date"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:text="Date"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#372c24" />

        <TextView
            android:id="@+id/tv_event_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:text="Time"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#372c24" />
        
          <TextView
            android:id="@+id/tv_event_amt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:text="You owe $3"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#372c24" />

        <Button
            android:id="@+id/btnEventSettle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:text="Settle Up" />
        
    </LinearLayout>

</RelativeLayout>